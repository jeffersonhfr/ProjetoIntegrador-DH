<% for (let i=0; i < categoria.length; i++) { %>

  <div class="travel-card travel-card__content">
    <div class="travel-card__imagem-box">
      <img alt="Categoria Imagem" src="<%= categoria[i].imagemCategoria%>" class="travel-card__imagem">
    </div>
    <div class="travel-card__info-box">
      <div class="travel-card__infoDesc">
        <ul class="Propriedades">
          <li class="usuario-card__propriedade"> Nome da Categoria</li>
          <li class="usuario-card__dado">
            <%= categoria[i].nomeCategoria%>
          </li>
          <li class="usuario-card__propriedade">Cor </li>
          <li class="usuario-card__dado">
            <%= categoria[i].corCategoria%>
          </li>
        </ul>
      </div>
    </div>
    <% if(locals.usuarioLogado && locals.usuarioAdmin==='true' ) { %>
      <div class="btao-Container">
        <a href="/listarCategoria/<%= categoria[i].id %>" class="btao-form">
          <button class="btao-Container__btao-visualizar listarUsuarios">
            <i class="bi bi-eye-fill"></i>
          </button>
        </a>

        <a href="/listarCategoria/<%= categoria[i].id %>/editar" class="btao-form">
          <button class="btao-Container__btao-editar listarUsuarios">
            <i class="bi bi-pencil-fill"></i>
          </button>
        </a>

        <a onclick="openModal<%=i%>()" class="btao-form">
          <button class="btao-Container__btao-deletar listarPacotes">
            <i class="bi bi-trash-fill"></i>
          </button>
        </a>

      </div>
      <% } %>
  </div>

  <% } %>


    <div class="modal" id="modal<%=i%>">
      <div class="modal-alert">
        <div class="modal-conteudo">
          <h1 class="tituloModal tituloAlert">Deseja realmente excluir <%= categoria[i].nomeCategoria%>?
          </h1>
          <form action="listarCategoria/<%= categoria[i].id%>/delete" method="POST">
            <button type="submit" class="btao-pacote btn-alert">Sim</button>
            <a onclick="closeModal<%=i%>()" class="btao-pacote btn-cancel">NÃ£o</a>
          </form>
        </div>
      </div>
    </div>

    <script>
      function openModal<%=i%> () {
        document.getElementById('modal<%=i%>').classList.add('modal-active');
        document.body.classList.add('scrollNone');
      }

      function closeModal<%=i%> () {
        document.getElementById('modal<%=i%>').classList.remove('modal-active');
        document.body.classList.remove('scrollNone');
      }
    </script>

    <% } %>