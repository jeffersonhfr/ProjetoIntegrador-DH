<%- include('./partials/head') %>
  <%- include('./partials/header') %>
    <div class="container">
      <form action="" method="POST" class='addPacote' enctype="multipart/form-data">
        <article class='addPacote-TitleContainer'>
          <h1 class='addPacote-TitleContainer'>Adicionar Pacotes</h1>
        </article>

        <h2 class='addPacote-TitleContainer'>Adicione as imagens</h2>
        <nav class='addPacote-ImgContainer' style='position: relative;'>
          <ul class='addPacote-ImgContainer__Img-list'>

            <li class="listagemFoto">
              <h2>Imagem da Capa</h2>
              <img src="" id="imgpackcapa" width="300px" height="200px" class="img-pack">
              <input type="file" name="capa" accept="image/png, image/jpeg" onchange="loadFileCapa(event)" />
            </li>

            <li class="listagemFoto">
              <h2>Imagem 01</h2>
              <img src="" width="300px" height="200px" id="imgpack1" class="img-pack ">
              <input type="file" name="imagem01" accept="image/png, image/jpeg" onchange="loadFile1(event)" />
            </li>

            <li class="listagemFoto">
              <h2>Imagem 02</h2>
              <img src="" id="imgpack2" width="300px" height="200px" class="img-pack">
              <input type="file" name="imagem02" accept="image/png, image/jpeg" onchange="loadFile2(event)" />
            </li>

            <li class="listagemFoto">
              <h2>Imagem 03</h2>
              <img src="" id="imgpack3" width="300px" height="200px" class="img-pack">
              <input type="file" name="imagem03" accept="image/png, image/jpeg" onchange="loadFile3(event)" />
            </li>

            <li class="listagemFoto">
              <h2>Imagem 04</h2>
              <img src="" id="imgpack4" width="300px" height="200px" class="img-pack">
              <input type="file" name="imagem04" accept="image/png, image/jpeg" onchange="loadFile4(event)" />
            </li>

            <li class="listagemFoto">
              <h2>Imagem 05</h2>
              <img src="" id="imgpack5" width="300px" height="200px" class="img-pack">
              <input type="file" name="imagem05" accept="image/png, image/jpeg" onchange="loadFile5(event)" />
            </li>

            <li class="listagemFoto">
              <h2>Imagem 06</h2>
              <img src="" id="imgpack6" width="300px" height="200px" class="img-pack">
              <input type="file" name="imagem06" accept="image/png, image/jpeg" onchange="loadFile6(event)" />
            </li>
          </ul>
        </nav>
        <script src="../src/imagens-preview.js"></script>

        <h2 class='addPacote-TitleContainer'>Adicione as informações sobre o pacote</h2>
        <ul class="Pacote-Propriedades">
          <li class="Pacote-Propriedades__Item Pacote-Propriedades__Item--addpack">
            <label>Nome Pacote</label>
            <input type="text" name="nomePacote" id="nomePacote">
          </li>
          <li class="Pacote-Propriedades__Item Pacote-Propriedades__Item--addpack">
            <label>Nome do Hotel</label>
            <input type="text" name="nomeHotel" id="nomeHotel">
          </li>
          <li class="Pacote-Propriedades__Item Pacote-Propriedades__Item--addpack Titulo">
            <label>Diárias</label>
            <input type="number" name="diarias" id="diarias">
          </li>
          <li class="Pacote-Propriedades__Item Pacote-Propriedades__Item--addpack">
            <label>Destino:</label>
            <div class="radio-box">
              <div class="radio-opt">
                <input type="radio" name="nacional" id="nacional" value="1"> Nacional
              </div>
              <div class="radio-opt">
                <input type="radio" name="nacional" id="nacional" value="0"> Internacional
              </div>
            </div>
          </li>
          <li class="Pacote-Propriedades__Item Pacote-Propriedades__Item--addpack">
            <label>Passagem Aérea:</label>
            <div class="radio-box">
              <div class="radio-opt">
                <input type="radio" name="PassagemAerea" id="PassagemAerea" value="1"> Sim
              </div>
              <div class="radio-opt">
                <input type="radio" name="PassagemAerea" id="PassagemAerea" value="0"> Não
              </div>
            </div>
          </li>
        </ul>

        <h2 class='addPacote-TitleContainer'>Adicione os adicionais do pacote, se houve.</h2>
        <ul class="Pacote-Propriedades-chkbox">

          <!-- for(let i=0; i<adicionais.length ; i++)  -->
          <li class="Pacote-Propriedades__Item Pacote-Propriedades__Item--checkbox">
            <div class="checkbox-group">
              <input type="checkbox" value="<%=adicionais[6].id%>" id="adicionalteste" name="adicionalteste">
              <label for="CityTour">
                <%= adicionais[6].nomeAdicional %>
              </label>
            </div>
          </li>


        </ul>


        <h2 class='addPacote-TitleContainer'>Adicione os dados financeiros</h2>
        <ul class="Pacote-Propriedades">
          <li class="Pacote-Propriedades__Item Pacote-Propriedades__Item--addpack">
            <label>Valor do Pacote</label>
            <input type="text" name="preco" id="preco" placeholder="ex.: 19990.00 - R$ 19.990,00">
          </li>
          <li class="Pacote-Propriedades__Item Pacote-Propriedades__Item--addpack">
            <label>Percentual de desconto</label>
            <input type="text" name="promocaoPorcentagem" id="promocaoPorcentagem" placeholder="ex. 10">
          </li>
          <li class="Pacote-Propriedades__Item Pacote-Propriedades__Item--addpack Titulo">
            <label>Número máximo de parcelas</label>
            <input type="number" name="parcelas" id="parcelas">
          </li>
        </ul>

        <h2 class='addPacote-TitleContainer'>Adicione as descrições sobre o pacote e local</h2>
        <ul class="Pacote-Propriedades">
          <li class="Pacote-Propriedades__Item Pacote-Propriedades__Item--addpack">
            <label>Sobre o Destino</label>
            <textarea name="sobre" id="sobre" cols="30" rows="10"></textarea>
          </li>
          <li class="Pacote-Propriedades__Item Pacote-Propriedades__Item--addpack">
            <label>Pontos Turísticos</label>
            <textarea name="pontoTuristico" id="pontoTuristico" cols="30" rows="10"></textarea>
          </li>
        </ul>

        <button type="submit" title="Criar Pacote" class="Pacote__Button-Comprar">Cadastrar</button>
      </form>
    </div>


    <script src="../../src/pacote-edit.js"></script>
    <%- include('./partials/footer') %>