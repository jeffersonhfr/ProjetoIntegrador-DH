  <header class="header">
    <div class="header-overlay">
      <div class="header_container">
        <div class="container container__header">
          <a href="/">
            <img class="header_logo" src="assets/img/logo01.png" alt="logo" width="234px" height="51px">
          </a>

          <nav class="header_menu menu_mobile">
            <input id="menu-hamburguer" type="checkbox" class="input-menu" />
            <label for="menu-hamburguer">
              <div class="menu">
                <span class="hamburguer"></span>
                <div class="content_menu_mob">
                  <ul>
                    <li><a href="viagenstematicas">Viagens Temáticas</a></li>
                    <li><a href="pacotespromocionais">Pacotes Promocionais</a></li>
                    <li><a href="sobrenos">Sobre Nós</a></li>
