<%- include('./partials/head') %>
    <%- include('./partials/header') %>


        <main class="perfil">
            <div class="perfil__container-top">
                <h1 class="perfil__title">Meu Perfil</h1>
            </div>
            <form class="perfil__dados-do-usuario" action="" method="POST" enctype="multipart/form-data" accept="image/png, image/jpeg" name="usuarioAvatar">

                <div class="dados-do-usuario__img-container">
                    <img class="img-container__avatar" src="<%= user[0].avatar%>">
                    <label class="custom-file-upload">
                        <input type="file" name="usuarioAvatar" id="usuarioAvatar" style="display: none;" />
                        <div class="img-container__btn-enviar-img">Alterar Imagem</div>
                    </label>
                </div>
                <div class="dados-do-usuario__info nome">
                    <label for="nome">
                        <h2 class="info__titulo">Nome Completo</h2>
                    </label>
                    <div class="info__usuario"><input id="nome" name="nome" type="text" value="<%= user[0].nome%>" />
                    </div>
                </div>
                <div class="dados-do-usuario__info email">
                    <label for="email">
                        <h2 class="info__titulo">E-mail</h2>
                    </label>
                    <input id="email" name="email" type="text" value="<%= user[0].email%>" />
                </div>
                <div class="dados-do-usuario__info nascimento">
                    <label for="nascimento">
                        <h2 class="info__titulo">Data de Nascimento</h2>
                    </label>
                    <input id="nascimento" name="nascimento" type="date" value="<%= user[0].nascimento%>" />
                </div>
                <div class="dados-do-usuario__info telefone">
                    <label for="telefone">
                        <h2 class="info__titulo">Telefone</h2>
                    </label>
                    <input id="telefone" name="telefone" type="tel" value="<%= user[0].telefone%>" />
                </div>
                <div class="dados-do-usuario__info cpf">
                    <label for="cpf">
                        <h2 class="info__titulo">CPF</h2>
                    </label>
                    <input id="cpf" name="cpf" type="text" value="<%= user[0].cpf%>" />

                </div>
                <div class="dados-do-usuario__info cep">
                    <label for="cep">
                        <h2 class="info__titulo">CEP</h2>
                    </label>
                    <input id="cep" name="cep" type="number" value="<%= user[0].cep%>" />

                </div>
                <div class="dados-do-usuario__info endereco">
                    <label for="endereco">
                        <h2 class="info__titulo">Endereço</h2>
                    </label>
                    <input id="endereco" name="endereco" type="text" value="<%= user[0].logradouro%>" />
                </div>
                <div class="dados-do-usuario__info complemento">
                    <label for="complemento"></label>
                    <h2 class="info__titulo">Complemento</h2></label>
                    <input id="complemento" name="complemento" type="text" value="<%= user[0].complemento%>" />
                </div>
                <div class="dados-do-usuario__info cidade">
                    <label for="cidade">
                        <h2 class="info__titulo">Cidade</h2>
                    </label>
                    <input id="cidade" name="cidade" type="text" value="<%= user[0].localidade%>" />
                </div>
                <div class="dados-do-usuario__info estado">
                    <label for="estado">
                        <h2 class="info__titulo">Estado</h2>
                    </label>
                    <input id="uf" name="uf" type="text" value="<%= user[0].uf%>" />
                </div>
                <div class="dados-do-usuario__info senha">
                    <label for="senha">
                        <h2 class="info__titulo">Senha</h2>
                    </label>
                    <input id="senha" name="senha" type="password" onkeyup="validaSenha()" value="" placeholder="Insira somente para troca" />
                </div>
                <div class="dados-do-usuario__info confirmar">
                    <label for="confirmar">
                        <h2 class="info__titulo">Confirmar Senha</h2>
                    </label>
                    <input id="confirmar" name="confirmar" type="password" value="" onkeyup="validaSenha()" placeholder="Insira somente para troca" />
                </div>
                <span id="mensagem-erro"></span>
                <input type="text" id="idUsuario" name="idUsuario" value="<%= user[0].id%>" hidden>
                <input class="dados-do-usuario__btn-submit" type="submit" value="Salvar Alterações" id="btnInput">
            </form>
        </main>

        <script>
            const senha = document.querySelector('#senha');
            const confirmaSenha = document.querySelector('#confirmar');
            const enviar = document.querySelector('#btnInput');
            const mensagem = document.querySelector("#mensagem-erro");
            mensagem.style.display = "none";
            enviar.disabled = false;


            confirmaSenha.addEventListener('onkeyup', validaSenha())
            function validaSenha() {
                if (senha.value == '') {
                    enviar.disabled = false;
                    mensagem.innerHTML = ''
                    mensagem.style.display = "none";
                } else if (senha.value == confirmaSenha.value) {
                    mensagem.innerHTML = ''
                    enviar.disabled = false;
                    mensagem.style.display = "none";
                } else {
                    mensagem.style.display = "flex";
                    mensagem.innerHTML = 'As senhas não conferem'
                    console.log('outra senha')
                    enviar.disabled = true;
                }
            }
        </script>
        <%- include('./partials/footer') %>